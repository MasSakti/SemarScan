<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_login"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".About">

    <TextView
        android:id="@+id/txt_profil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="PROFIL DEVELOPER"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/foto"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_below="@+id/txt_profil"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:src="@drawable/myfoto" />

    <TextView
        android:id="@+id/txt_nama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/foto"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="Muhammad Mutawalli Sya'rawi | 191111041"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_some"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_nama"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:paddingLeft="10dp"
        android:text="Send Me Some Feedback : "
        android:textColor="@color/white"
        android:textSize="17dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_some"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/gmail"
        android:drawablePadding="10dp"
        android:onClick="sendemail"
        android:paddingLeft="10dp"
        android:text="@string/txt_email"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_fb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_email"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/fb"
        android:drawablePadding="10dp"
        android:onClick="openfb"
        android:paddingLeft="10dp"
        android:text="Mutawalli Sya'rawi"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt_ig"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_fb"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ig"
        android:drawablePadding="10dp"
        android:onClick="openig"
        android:paddingLeft="10dp"
        android:text="@string/txt_ig"
        android:textColor="@color/white"
        android:textSize="17dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/about_btn_kembali"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_ig"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="40dp"
        android:background="@drawable/button_background"
        android:text="Kembali"
        android:textColor="#fff" />
</RelativeLayout>